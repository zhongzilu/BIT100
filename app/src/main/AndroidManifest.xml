<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhongzilu.bit100">


    <!-- 通用权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.Bit100LauncherActivity"
            android:theme="@style/LauncherStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--主Activity-->
        <activity android:name=".view.activity.Bit100MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--文章详情Activity-->
        <activity android:name=".view.activity.Bit100ArticleDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".view.activity.SettingsActivity"/>

    </application>

</manifest>